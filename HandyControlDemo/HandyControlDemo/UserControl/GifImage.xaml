<UserControl x:Class="HandyControlDemo.UserControl.GifImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d">
    <hc:TransitioningContentControl>
        <UniformGrid Rows="2" Columns="5" Height="210" Width="550" Margin="10">
            <hc:GifImage Margin="5" Uri="{Binding ImgPath1}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath2}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath3}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath4}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath5}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath6}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath7}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath8}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath9}"/>
            <hc:GifImage Margin="5" Uri="{Binding ImgPath10}"/>
        </UniformGrid>
    </hc:TransitioningContentControl>
</UserControl>
